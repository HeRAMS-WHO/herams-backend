{
    "name": "herams/api",
    "description": "HeRAMS API",
    "type": "project",
    "autoload": {
        "classmap": [
            "vendor/yiisoft/yii2"
        ],
        "psr-4": {
            "herams\\api\\": ["src/"]
        }
    },
    "authors": [
        {
            "name": "Sam Mousa",
            "email": "sam@mousa.nl"
        }
    ],
    "require": {
        "yidas/yii2-composer-bower-skip": "^2.0",
        "herams/common": "*@dev",
        "yiisoft/yii2": "2.0.46",
        "herams/i18n": "dev-master"
    },
    "replace":{
        "cebe/markdown": "*",
        "ezyang/htmlpurifier": "*",
        "paragonie/random_compat": "*"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../common",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "package",
            "package": {
                "name": "herams/i18n",
                "version": "dev-master",
                "dist": {
                    "url": "https://github.com/HeRAMS-WHO/herams-i18n/archive/master.zip",
                    "type": "zip"
                }
            }
        }
    ],
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "captainhook/plugin-composer": false
        }
    },
    "require-dev": {
        "yiisoft/yii2-debug": "~2.1",
        "phpstan/phpstan": "^1.9",
        "symplify/easy-coding-standard": "^11",
        "vimeo/psalm": "^5.6",
        "phpunit/phpunit": "^10.0"
    }
}
