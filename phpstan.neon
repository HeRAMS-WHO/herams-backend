    level: 1
    bootstrapFiles:
      - 'tests/constants.php'
    dynamicConstantNames:
      - CONSOLE
    excludes_analyse:
      - protected/console/DevController.php
      - protected/components/Form.php
      - protected/widgets/FormButtonsWidget.php
