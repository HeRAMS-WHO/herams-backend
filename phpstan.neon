    ignoreErrors:
        - message: '#^Using \$this outside a class#'
          path: '*/views/*'
        - message: '#^Using \$this outside a class#'
          path: '*/mail/*'
        - message: '#^Variable .* might not be defined\.$#'
          path: '*/views/*'
        - message: '#^Variable .* might not be defined\.$#'
          path: '*/mail/*'