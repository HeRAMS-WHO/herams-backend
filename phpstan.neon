      - protected/*/*/*
      - protected/config/*
      - microservices/*/*/*
      - microservices/*/*
      - microservices/*/*/*/*
    checkMaybeUndefinedVariables: true
    reportUnmatchedIgnoredErrors: false

includes:
    - microservices/common/phpstan.neon
    - microservices/api/phpstan.neon
