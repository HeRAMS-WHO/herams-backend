{
    "name": "who/prime2",
    "description": "WHO Prime 2",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Sam Mousa",
            "email": "sam@mousa.nl"
        },
        {
            "name": "Joey Claessen",
            "email": "joey@ch-ict.nl"
        }
    ],
    "require": {
        "php": ">=7.4.3",
        "ext-gd": "*",
        "ext-pdo_mysql": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "fortawesome/font-awesome": "> 5",
        "guzzlehttp/psr7": "^1.2",
        "kartik-v/yii2-builder": "^1.6",
        "kartik-v/yii2-grid": "^3.0",
        "kartik-v/yii2-helpers": "^1.3",
        "kartik-v/yii2-password": "^1.5",
        "lcobucci/jwt": "^3.2",
        "nesbot/carbon": "^2.0.0",
        "nikic/iter": "^2.0",
        "npm-asset/bootstrap": "^3.4",
        "npm-asset/izitoast": "^1.4",
        "psr/http-message": "^1.0",
        "sam-it/ls2-jsonrpc-client": "^1.1.1",
        "sam-it/yii2-abac": ">= 1.0.2",
        "sam-it/yii2-magic": "^2",
        "sam-it/yii2-urlsigner": "^2.0",
        "sam-it/yii2-virtual-fields": "^2.0",
        "yiisoft/yii2": "^2.0.16.1",
        "yiisoft/yii2-bootstrap": "> 2",
        "yiisoft/yii2-swiftmailer": "^2.1",
        "ext-simplexml": "*",
        "kartik-v/yii2-widget-activeform": "^1.5",
        "kartik-v/yii2-widget-switchinput": "^1.3",
        "kartik-v/yii2-widget-select2": "^2.1",
        "npm-asset/pretty-checkbox": "^3.0"
    },

    "autoload": {
        "psr-4": {
            "prime\\": [
                "protected"
            ],
            "app\\": [
                "protected"
            ],
            "prime\\tests\\": [
                "tests/",
                "tests/_support"
            ]
        },
        "classmap": [
            "vendor/yiisoft/yii2"
        ]
    },
    "replace":{
        "bower-asset/bootstrap": "*"
    },
    "require-dev": {
        "codeception/codeception": "> 4",
        "codeception/module-asserts": "> 1",
        "codeception/module-rest": "> 1",
        "codeception/module-yii2": "> 1",
        "ifsnop/mysqldump-php": "> 2",
        "phpunit/phpunit": ">= 9",
        "yiisoft/yii2-debug": "> 2",
        "squizlabs/php_codesniffer": "^3.5",
        "brainmaestro/composer-git-hooks": "^2.8"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "scripts": {
        "codeception": "docker-compose run --rm codeception",
        "cli": "docker-compose run --rm cli",
        "lint": "git diff-index --name-only --cached HEAD | xargs -r vendor/bin/phpcs",
        "lint-fix": "git diff-index --name-only --cached HEAD | xargs -r vendor/bin/phpcbf",
        "test" : "docker-compose run --rm codeception run",
        "stan": "phpstan analyse src",
        "test-with-cc" : "docker-compose run --rm codeception run --coverage-html --coverage-xml",
        "post-install-cmd": "cghooks add --ignore-lock",
        "post-update-cmd": "cghooks update"
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "git diff --name-only --cached HEAD | xargs -r vendor/bin/phpcs"
            ],
            "post-merge": [
                "composer install"
            ]
        }
    }

}
